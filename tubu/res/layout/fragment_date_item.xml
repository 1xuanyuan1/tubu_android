<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent" >

    <RelativeLayout
        android:id="@+id/date_item_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/date_portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/portrait" />

        <TextView
            android:id="@+id/date_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/date_portrait"
            android:text="秋起分寒"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size_middle" />

        <TextView
            android:id="@+id/date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/date_portrait"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/date_portrait"
            android:text="15-05-03 15:30"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/date_age"
            style="@style/age_female_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/date_name"
            android:drawableLeft="@drawable/female"
            android:text="25" />

        <RelativeLayout
            android:id="@+id/date_content_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_portrait"
            android:layout_marginTop="15dp" >

            <TextView
                android:id="@+id/date_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6月1日"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/date_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/date_date"
                android:text="有6月1号去雁荡山的小伙伴吗？一起约吧。"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/date_image_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_content_rl"
            android:orientation="horizontal"
            android:layout_marginTop="5dp" >

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:src="@drawable/scenic1"
                android:scaleType="fitXY"
                android:padding="3dp"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:src="@drawable/scenic2"
                android:scaleType="fitXY"
                android:padding="3dp"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:src="@drawable/scenic3"
                android:scaleType="fitXY"
                android:padding="3dp"
                />
            
        </LinearLayout>
        <RelativeLayout 
            android:id="@+id/date_foot_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_image_ll"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray3"
                android:textSize="@dimen/text_size_small"
                android:drawableLeft="@drawable/zb3"
                android:text="我在   鹿城区金丰园"
                />
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:layout_alignParentRight="true"
                android:text="浏览 12   评论 2"
                />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>